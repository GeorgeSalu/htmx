<div class="flex flex-col items-center justify-center h-screen">
    <form class="w-full flex flex-col p-2 gap-4 max-w-2xl" hx-post="/register" hx-swap="none">
        <h1 class="text-4xl font-bold text-center mb-4">Novo usuario</h1>

        <input 
            type="text" 
            placeholder="nome completo" 
            name="name"
            class="w-full bg-white p-2 rounded text-black" 
        />

        <input 
            type="text" 
            placeholder="email" 
            name="email"
            class="w-full bg-white p-2 rounded text-black" 
        />

        <input 
            type="password" 
            placeholder="senha" 
            name="password"
            class="w-full bg-white p-2 rounded text-black" 
        />

        <button type="submit" class="w-full bg-blue-500 p-2 rounded text-white font-bold">
            Cadastrar
        </button>

    </form>
</div>